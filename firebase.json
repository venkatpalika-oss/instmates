{
  "firestore": {
    "database": "(default)",
    "location": "asia-south1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },

  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "trailingSlash": true,

    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],

    "redirects": [
      {
        "source": "/profile.html",
        "destination": "/profile/",
        "type": 301
      },
      {
        "source": "/profiles.html",
        "destination": "/profiles/",
        "type": 301
      },
      {
        "source": "/knowledge.html",
        "destination": "/knowledge/",
        "type": 301
      },
      {
        "source": "/technicians.html",
        "destination": "/technicians/",
        "type": 301
      }
    ],

    "rewrites": [
      {
        "source": "/technicians/:uid",
        "destination": "/profile/"
      }
    ]
  },

  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "disallowLegacyRuntimeConfig": true,
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ]
}